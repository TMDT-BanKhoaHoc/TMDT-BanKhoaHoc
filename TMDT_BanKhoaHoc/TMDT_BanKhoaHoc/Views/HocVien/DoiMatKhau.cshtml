@model TMDT_BanKhoaHoc.Models.FormDoiMatKhau

@{
    ViewBag.Title = "Đổi mật khẩu";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@ViewBag.Title</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MatKhauCu, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.MatKhauCu, new { htmlAttributes = new { @class = "form-control", @style = "width: 50%;", @type = "password" } })
                @if (!string.IsNullOrEmpty(ViewData.ToString()))
                {
                    <span class="field-validation-error text-danger" style="width: 50%;">@ViewData["matkhaucu"].ToString()</span>
                }
                else
                {
                    @Html.ValidationMessageFor(model => model.MatKhauCu, "", new { @class = "text-danger", @style = "width: 50%;" })
                }
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MatKhauMoi, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.MatKhauMoi, new { htmlAttributes = new { @class = "form-control", @style = "width: 50%;", @type = "password" } })
                @Html.ValidationMessageFor(model => model.MatKhauMoi, "", new { @class = "text-danger", @style = "width: 50%;" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
